<div class="row">
  <div class="col-md-offset-3">
    <h2>Editing Book</h2>
    <%= render 'layouts/errors_messages', errors: @book %>
    <%= form_for(@book, html: { class:'col-md-6' }) do |f| %>
      <div>
        <%= f.label :title, class:'control-label' %>
        <%= f.text_field :title, class:"col-xs-12" %>
      </div>
      
      <div>
        <%= f.label :body, 'Opinion',class:'control-label' %>
        <%= f.text_area :body, class:"col-xs-12" %>
      </div>
      
      <div>
        <%= f.submit 'Update Book',class: "col-xs-12 btn btn-primary" %>
      </div>
    <% end %>
    <div class="col-md-12">
      <%= link_to 'Show', book_path(@book) %>
      <span>|</span>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>
